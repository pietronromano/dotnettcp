    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            //NOTE: Best to use coreclr for console app, not just generic .Net
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build", //SEE tasks.json
            "program": "${workspaceFolder}/bin/Debug/net9.0/TcpSocketClient.dll",
            //dev 10.247.35.173 plx-ca-transauth-dev-neu-2.wonderfulflower-6d494ef0.northeurope.azurecontainerapps.io
            //prod 10.247.36.59 plx-ca-transauth-prd-neu-2.mangoisland-cbb12176.northeurope.azurecontainerapps.io
            //uat 10.247.36.165 plx-ca-transauth-uat-neu-2.greenglacier-a5a9cff2.northeurope.azurecontainerapps.io

            //args:  ip , port, message|message.txt, messageCount, connectTimeout (seconds)
            "args": ["10.247.35.173","9091", "message.txt", "1", "10"],
            
            // Example of using environment variables
            "env": {
                //"LISTENER_PORT": "9098", //"9096",//"9091","9090", // "11001"
                //"LISTENER_IP":   "10.247.35.173" //"127.0.0.1"  
               },
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        }

    ]
}